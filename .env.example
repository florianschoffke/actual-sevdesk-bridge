# SevDesk API credentials
SEVDESK_API_KEY=your_sevdesk_api_key_here

# Actual Budget configuration
ACTUAL_BUDGET_URL=http://your-actual-budget-server:5006
ACTUAL_BUDGET_PASSWORD=your_actual_budget_password
ACTUAL_BUDGET_FILE_ID=My Budget
ACTUAL_BUDGET_VERIFY_SSL=true

# Sync configuration
ACTUAL_ACCOUNT_NAME=EGB Funds
LOG_LEVEL=INFO

# Email notifications for validation failures (optional)
# Set EMAIL_ENABLED=true to enable, false to disable
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com
EMAIL_USE_TLS=true
